<header>

  <!--HOMEPAGE BUTTON-->
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <!--NAVIGATION BUTTONS-->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>


    <!--LOGIN BUTTON (not Logged in)-->
    <% if (!user){ %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup"></div>
      <form action="/login">
        <span class="navbar-text" style="margin: 0.5em">Not a TinyApp'er? <a href="/register">Register</a></span>
        <button 
          type="submit" 
          class="btn btn-success btn-sm"
          style="float: right; width: 150px; margin: 1em; border: 1px solid #ffffff;"
        >Login</button>
      </form>
      </div>

    <!--LOGOUT BUTTON (Logged in)-->
    <% } else if (user){ %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup"></div>
      <span class="navbar-text" style="margin: 0.5em">Logged in as: <%= user.email%></span>
      <form method="POST" action="/logout">
        <button 
          type="submit" 
          class="btn btn-success btn-sm"
          style="float: right; width: 150px; margin: 1em; border: 1px solid #ffffff;"
        >Logout</button>
      </form>
      </div>
    <% } %>
    
  </nav>
</header>